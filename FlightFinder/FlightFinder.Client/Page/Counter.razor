@page "/counter"
@inherits Blazor.Fluxor.Components.FluxorComponent

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Counter</h3>
            </div>
        </div>

    <div class="row">
        <div class="col">
            <p>Current count: @State.Value.CurrentCounter</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" @onclick=IncrementCount>Click me</button>
        </div>
    </div>
</div>

